<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="FerryUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>entities.Person</class>
        <class>entities.Reservation</class>
        <class>entities.Departure</class>
        <class>entities.FerryConfig</class>
        <class>entities.Ferry</class>
        <class>entities.Harbour</class>
        <class>entities.Route</class>
        <class>entities.Price</class>
        <class>entities.TravelingEntityType</class>
        <class>entities.TravelingEntity</class>
        <class>entities.Passenger</class>
        <class>entities.Native</class>
        <class>entities.Alien</class>
        <class>entities.Vehicle</class>
        <class>entities.Car</class>
        <class>entities.Truck</class>
        <class>entities.HeavyMachinery</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ferry"/>
            <property name="javax.persistence.jdbc.user" value="ferryman"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.password" value="ferryman"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>

    </persistence-unit>
</persistence>
